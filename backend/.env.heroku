# Configuration pour déploiement Heroku PostgreSQL
# Variables d'environnement pour production

# Application
APP_NAME="Breitling League"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-app-name.herokuapp.com

# Base de données PostgreSQL (Heroku configura automatiquement DATABASE_URL)
DB_CONNECTION=pgsql
# DATABASE_URL sera configuré automatiquement par Heroku
DB_HOST=
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
DB_SSLMODE=require

# Session & Cache
SESSION_DRIVER=database
CACHE_STORE=database

# Logs
LOG_CHANNEL=errorlog
LOG_LEVEL=error

# Mail (configurer selon vos besoins)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@breitlingleague.com
MAIL_FROM_NAME="${APP_NAME}"

# Configuration additionnelle pour Heroku
HEROKU_APP_NAME=your-app-name
